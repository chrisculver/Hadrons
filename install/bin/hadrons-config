#! /bin/sh

prefix=/home/chrisculver/Code/LatticeQCD/Hadrons/install
exec_prefix=${prefix}
includedir=${prefix}/include

usage()
{
  cat <<EOF
Usage: hadrons-config [OPTION]

Known values for OPTION are:

  --prefix     show Hadrons installation prefix
  --cxxflags   print pre-processor and compiler flags
  --ldflags    print library linking flags
  --libs       print library linking information
  --help       display this help and exit
  --version    output version information
  --git        print git revision
  --cxx        print c++ compiler (may include some flags and spaces)
  --cxxld      print c++ linker   (may include some flags and spaces)

EOF
  
  exit $1
}

if test $# -eq 0; then
  usage 1
fi

cflags=false
libs=false

while test $# -gt 0; do
  case "$1" in
    -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
    *) optarg= ;;
  esac
  
  case "$1" in
    --prefix)
      echo $prefix
    ;;
    
    --version)
      echo v1.2-dev
      exit 0
    ;;
    
    --git)
      echo "develop b604bb3b34f45520406a74cd6120a32f91bf9603"
      exit 0
    ;;
    
    --help)
      usage 0
    ;;
    
    --cxxflags)
      echo   -I/home/chrisculver/Code/LatticeQCD/Grid/install/include -I/home/chrisculver/Code/Libraries/hdf5/install/include -I/home/chrisculver/Code/LatticeQCD/c-lime/install/include -fopenmp -O3 -fno-strict-aliasing
    ;;
    
    --cxx)
      echo clang
    ;;
    
    --cxxld)
      echo clang
    ;;
    
    --ldflags)
      echo   -L/home/chrisculver/Code/LatticeQCD/Grid/install/lib -L/home/chrisculver/Code/Libraries/hdf5/install/lib -L/home/chrisculver/Code/LatticeQCD/c-lime/install/lib -fopenmp
    ;;
    
    --libs)
      echo  -ldl -lGrid  -lhdf5_cpp -lz -lcrypto -llime -lstdc++ -lm -lz -lhdf5
    ;;
    
    *)
      usage
      exit 1
    ;;
  esac
  shift
done

exit 0
